{
  "name": "halo-vault",
  "version": "1.0.0",
  "description": "Vault for USDT deposits with Symbiosis cross-chain swap to USDC on Polygon",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:mock-usdt": "hardhat deploy --network bsc-testnet --tags MockUSDT",
    "deploy:mainnet": "hardhat deploy --network bsc --tags HaloVault",
    "deploy:bsc-testnet": "hardhat deploy --network bsc-testnet --tags HaloVault",
    "deploy:testnet:all": "hardhat deploy --network bsc-testnet --tags MockUSDT,HaloVault",
    "verify:bsc": "hardhat etherscan-verify --network bsc",
    "verify:vault": "hardhat run scripts/verifyHaloVault.ts --network bsc",
    "verify:vault:testnet": "hardhat run scripts/verifyHaloVault.ts --network bsc-testnet",
    "verify:mainnet": "hardhat run scripts/verifyContracts.ts --network bsc",
    "verify:testnet": "hardhat run scripts/verifyContracts.ts --network bsc-testnet",
    "deployment:info": "hardhat run scripts/getDeploymentInfo.ts --network bsc-testnet",
    "deployment:info:mainnet": "hardhat run scripts/getDeploymentInfo.ts --network bsc",
    "claim-tokens": "hardhat run scripts/claimTestTokens.ts --network bsc-testnet",
    "deposit": "hardhat run scripts/depositExample.ts --network bsc",
    "check-status": "hardhat run scripts/checkSwapStatus.ts",
    "valuer": "hardhat run scripts/valuer.ts --network bsc",
    "valuer:simple": "hardhat run scripts/simpleValuer.ts --network bsc",
    "valuer:dry-run": "hardhat run scripts/valuer.ts --network bsc -- --dry-run",
    "valuer:state": "hardhat run scripts/valuer.ts --network bsc -- --state",
    "valuer:watch": "hardhat run scripts/valuer.ts --network bsc -- --watch 30",
    "check:valuation": "hardhat run scripts/checkValuation.ts --network bsc",
    "debug:tx": "hardhat run scripts/debugTransaction.ts --network bsc",
    "vault:settings": "ACTION=status hardhat run scripts/manageVaultSettings.ts --network bsc",
    "vault:enable-withdrawals": "ACTION=enable-withdrawals hardhat run scripts/manageVaultSettings.ts --network bsc",
    "vault:disable-withdrawals": "ACTION=disable-withdrawals hardhat run scripts/manageVaultSettings.ts --network bsc",
    "vault:enable-deposits": "ACTION=enable-deposits hardhat run scripts/manageVaultSettings.ts --network bsc",
    "vault:disable-deposits": "ACTION=disable-deposits hardhat run scripts/manageVaultSettings.ts --network bsc",
    "agent:state": "hardhat run scripts/agentBridge.ts --network bsc -- --dry-run",
    "agent:bridge": "hardhat run scripts/agentBridge.ts --network bsc",
    "agent:bridge:conservative": "hardhat run scripts/agentBridge.ts --network bsc -- --strategy=conservative",
    "agent:bridge:balanced": "hardhat run scripts/agentBridge.ts --network bsc -- --strategy=balanced",
    "agent:bridge:aggressive": "hardhat run scripts/agentBridge.ts --network bsc -- --strategy=aggressive",
    "agent:aster": "hardhat run scripts/agentAsterDex.ts --network bsc --",
    "symbiosis-test": "ts-node scripts/symbiosisHelper.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/node": "^20.11.0",
    "hardhat": "^2.22.0",
    "hardhat-deploy": "^0.12.4",
    "dotenv": "^16.4.5",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "axios": "^1.6.7"
  }
}
